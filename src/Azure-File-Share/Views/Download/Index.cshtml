@{
    ViewData["Title"] = "Download";
}

<div class="container">
    <h2>@ViewData["Title"].</h2>
    <h3>@ViewData["Message"]</h3>
    <div class="row">
        <div class="col-12">
            <div class="alert alert-success">
                Get your files by clicking 'Download' button
                <h2>@ViewData["Message"]</h2>
                <button type="button" class="btn btn-primary">Download</button>
                <a type="button" class="btn btn-primary" value="DownloadLink" 
                       href="@Url.Action("Download", "Download", new { fileUrl = 222 })";" >AA</a>
                <a type="button" class="btn btn-primary" value="DownloadLink"
                   href="@Url.Action("DownloadMultipleFiles", "Download", new { fileUrl = 222 })" ;" >BB</a>
            </div>
        </div>
    </div>
</div>
